<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mnetwork.app.nhatrosv.activity.RoomDetailActivity"
    tools:showIn="@layout/activity_room_detail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:textSize="@dimen/appIntroHeadingTextSize"
            android:text="2.5 trieu / 30 m2"/>
        <TextView
            android:id="@+id/tv_detail_title_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:text="So 151/37, Nguyen Duc Canh, Hoang Mai, Ha Noi"/>


        <include layout="@layout/content_fourbutton"></include>

        <include layout="@layout/layout_detail_room"/>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
