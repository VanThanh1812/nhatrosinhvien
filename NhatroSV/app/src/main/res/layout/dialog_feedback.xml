<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_dialog_title"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/txtcolor"
        android:text="Gửi phản hồi nhà trọ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">
        <RatingBar
            android:id="@+id/rate_feedback"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viết phản hồi của bạn tại đây: "/>

        <EditText
            android:id="@+id/et_feedback_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"/>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:gravity="center|right">
        <Button
            android:id="@+id/bt_feedback_cancel"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textColor="#03a9f4"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="?selectableItemBackground"
            android:text="Cancel"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/bt_feedback_send"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="?selectableItemBackground"
            android:textSize="14dp"
            android:textColor="#03a9f4"
            android:text="Gửi ngay"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"
            />
    </TableRow>


</LinearLayout>